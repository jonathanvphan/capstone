<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.listening_eye"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="31" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Listening_Eye" >
        <activity
            android:name="com.example.listening_eye.Voice2TextKotlin"
            android:exported="true" />
        <activity
            android:name="com.example.listening_eye.VoiceRecorder"
            android:exported="true" />
        <activity
            android:name="com.example.listening_eye.translation"
            android:exported="true"
            android:parentActivityName="com.example.listening_eye.ConversationMode" />
        <activity
            android:name="com.example.listening_eye.voice2text"
            android:exported="true"
            android:parentActivityName="com.example.listening_eye.ConversationMode" />
        <activity
            android:name="com.example.listening_eye.ConversationMode"
            android:exported="true" />
        <activity
            android:name="com.example.listening_eye.signup"
            android:exported="true" />
        <activity
            android:name="com.example.listening_eye.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.example.listening_eye.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>
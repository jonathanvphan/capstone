<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/public_announcement"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:backgroundTint="@color/design_default_color_primary"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_announce"
        app:fabCustomSize="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101"
        app:maxImageSize="70dp"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:text="Click to Reset Name"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_picked_up_edit" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/name_picked_up"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:backgroundTint="#03A9F4"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_name_picked"
        app:fabCustomSize="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/public_announcement"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101"
        app:maxImageSize="80dp"
        app:tint="@color/white" />

    <EditText
        android:id="@+id/editNameBox"
        android:layout_width="146dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Reset Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/trainSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Train"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/walkSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Walk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainSwitch" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/fireSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Fire  "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walkSwitch" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/hazardous"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:backgroundTint="#FF0000"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_hazardous"

        app:fabCustomSize="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/public_announcement"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101"
        app:maxImageSize="110dp"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Public\nAnnouncement"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/public_announcement" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="Hazardous\nSituation"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hazardous" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="52dp"
        android:gravity="center"
        android:text="Name\nCalled"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_picked_up" />

    <Button
        android:id="@+id/nameResetConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.654"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/editNameBox"
        app:layout_constraintVertical_bias="0.173" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/hazardous_edit"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="56dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_baseline_edit_24"
        android:visibility="visible"
        app:fabCustomSize="66dp"
        app:layout_constraintStart_toStartOf="@+id/hazardous"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:maxImageSize="40dp"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="119dp"
        android:layout_height="0dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Customize Types of Hazardous"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hazardous_edit" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/name_picked_up_edit"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="44dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_baseline_edit_24"
        android:visibility="visible"
        app:fabCustomSize="66dp"
        app:layout_constraintEnd_toEndOf="@+id/name_picked_up"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:maxImageSize="40dp"
        app:tint="@color/white" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/warningSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Warning"
        app:layout_constraintStart_toEndOf="@+id/trainSwitch"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/alertSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Alert      "
        app:layout_constraintStart_toEndOf="@+id/walkSwitch"
        app:layout_constraintTop_toBottomOf="@+id/warningSwitch" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/dangerSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Danger   "
        app:layout_constraintStart_toEndOf="@+id/fireSwitch"
        app:layout_constraintTop_toBottomOf="@+id/alertSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>

